#svn update
git pull

if [ -d jbxl ]; then
    #svn update jbxl
    (cd jbxl; git pull)
else
    #svn co http://www.nsl.tuis.ac.jp/svn/php/jbxl/trunk jbxl
    git clone https://github.com/JunkBox-Library/jbxl-php.git jbxl
fi

